	//	pixel.diffuse  = color * x + clamp(pixel.diffuse,  0.0, 1.0) * (1.0 - x);
	//	pixel.specular = color * x + clamp(pixel.specular, 0.0, 1.0) * (1.0 - x);
	//}
}
#endif
